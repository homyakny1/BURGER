<div class="container">
  <div class="row">
    <div class="col-sm-12" id="Burger-Title">
      <h1>Burgers!</h1>
    </div>
  </div>
  <div class="row">

    <div class="col-sm-4">
      <h2>Fresh Burgers!</h2>
      <ul>
        {{#each burgers}} {{#unless eaten}} {{> burgers/burger-block eat=true}} {{/unless}} {{/each}}
      </ul>
    </div>

    <div class="col-sm-4" id="addBurger">
      <form class="create-form">
        <div class="form-group">
          <input class="form-control" placeholder="Burger Name" type="text" id="ca" name="name">
        </div>
        <button type="submit" class="btn btn-warning">Add Burger</button>
      </form>
    </div>

    <div class="col-sm-4">
      <h2>Eaten Burgers!</h2>
      <ul>
        {{#each burgers}} {{#if eaten}} {{> burgers/burger-block eat=false}} {{/if}} {{/each}}
      </ul>
    </div>
  </div>
</div>